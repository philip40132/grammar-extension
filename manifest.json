{
  "manifest_version": 3,
  "name": "Trollmarly: The Anti-Grammar Extension",
  "version": "1.0",
  "description": "Makes your writing worse. You're welcome.",
  "icons": { "128": "icon.png" },  // Steal a trollface for this
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "permissions": ["activeTab"]
}
